<h2>Edit <%= @block.name %></h2>

<form method="POST" action="/<%= @block.user_id %>/blocks/<%= @block.id %>">
<input type="hidden" name="_method" value="PATCH"

    <label>Block Name: </label><input type="text" name="block[name]" value="<%= @block.name %>">
    <p>Choose the type of donation you want:</p>
    <input type="radio" id="hpc" name="block[donation_type]" value="HighestPreviousContribution" <%= 'checked' if @block.donation_type == "HighestPreviousContribution" %>><label>Highest Previous Contribution</label><br>
    <input type="radio" id="lda" name="block[donation_type]" value="LatestDonationAmount" <%= 'checked' if @block.donation_type == "LatestDonationAmount" %>><label>Latest Donation Amount</label><br>

    <input type="submit" value="submit" class="submit-button">

</form>